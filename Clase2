package com.iescamp.funciones;

public class Fase2 {
    // Atributos estáticos
    public static String[] indice;
    public static String[] autores;
    public static boolean[] disponibilidad;

    // Método para inicializar los datos
    public static void inicializarDatos(String[] t, String[] a, boolean[] d) {
        indice = t;
        autores = a;
        disponibilidad = d;
    }

    // Método para buscar por título
    public static void buscarPorTitulo(String titulo) {
        System.out.println("Buscando libro con título: " + titulo);
        for (int i = 0; i < indice.length; i++) {
            if (indice[i].equalsIgnoreCase(titulo)) {
                System.out.println("Libro encontrado:");
                System.out.println("Título: " + indice[i]);
                System.out.println("Autor: " + autores[i]);
                System.out.println("Disponibilidad: " + (disponibilidad[i] ? "Disponible" : "Prestado"));
                return;
            }
        }
        System.out.println("Libro no encontrado.");
    }

    // Método para buscar por autor
    public static void buscarPorAutor(String autor) {
        System.out.println("Buscando libros del autor: " + autor);
        boolean encontrado = false;
        for (int i = 0; i < autores.length; i++) {
            if (autores[i].equalsIgnoreCase(autor)) {
                if (!encontrado) {
                    System.out.println("Libros encontrados:");
                    encontrado = true;
                }
                System.out.println("Título: " + indice[i] + " - Disponibilidad: " + (disponibilidad[i] ? "Disponible" : "Prestado"));
            }
        }
        if (!encontrado) {
            System.out.println("No se encontraron libros para el autor: " + autor);
        }
    }
}
